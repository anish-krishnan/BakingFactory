<h5>Search result for term <em>'<%= @query %>'</em> resulted in <%= pluralize(@total_hits, 'hit') %></h5>
<p class="supertiny">&nbsp;</p>

<% unless @items.empty? %>
  <p><em><strong>Items matching term '<%= @query %>'</strong></em></p>
  <ul>
    <% for item in @items do %>
      <li>        <div class="col s4"><center>
          <img src=<%= item.picture %> style="width: 200px; height: 180px">
          <center><%= link_to item.name, item_path(item) %></center><br />
          $<%= item.current_price %>

          <br /><br /><br />
        </center></div></li>
    <% end %>
  </ul>
  <p class="smtext">&nbsp;</p>
<% end %>

<% unless @customers.nil? || @customers.empty? %>
  <p><em><strong>Customers matching term '<%= @query %>'</strong></em></p>
  <ul>
    <% for customer in @customers do %>
      <li><%= link_to customer.name, customer_path(customer) %></li>
    <% end %>
  </ul>
  <p class="supertiny">&nbsp;</p>
<% end %>